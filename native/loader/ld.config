 # Start of memory section
        MEMORY
        {
            ZP:
                start $0000
                size $0080;
            RAM:
                start $000800
                size $009FFF;
            ROM:
                start $FF80
                size $80;
        }

  SEGMENTS {
            CODE:   load = ROM, type = ro;
            RODATA: load = ROM, type = ro;
            VECTORS: load = ROM, type = ro, start = $FFFA;
            ZEROPAGE:   load = ZP, type = rw;
            DATA:   load = RAM, type = rw;
            BSS:    load = RAM, type = bss, define = yes;
        }
